{
    "name": "adm-vscode",
    "displayName": "ADM extension for VS Code",
    "description": "Syntax highlighting for ADM files",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/securitydesign/securitydesign.adm.vscode.git"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "adm",
                "extensions": [
                    ".adm"
                ],
                "aliases": [
                    "ADM",
                    "adm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "adm",
                "scopeName": "source.adm",
                "path": "./syntaxes/adm.tmLanguage.json"
            }
        ]
    },
    "main": "./extension.js",
    "activationEvents": ["onLanguage:adm"],
    "scripts": {
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "@cucumber/gherkin": "^27.0.0",
        "gherkin": "^9.0.0"
    }
}
